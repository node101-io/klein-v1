{
  "name": "klein",
  "productName": "Klein",
  "version": "0.0.2",
  "description": "Klein helps you install, run, and manage your node without the need of technical skills.",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/node101-io/klein-v1.git"
  },
  "author": {
    "name": "node101",
    "email": "hello@node101.io",
    "url": "https://node101.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/node101-io/klein-v1/issues"
  },
  "homepage": "https://github.com/node101-io/klein-v1#readme",
  "build": {
    "appId": "io.node101.klein",
    "files": [
      "build/**/*",
      "controllers/**/*",
      "middleware/**/*",
      "modules/**/*",
      "node_modules/**/*",
      "public/**/*",
      "routes/**/*",
      "translations/**/*",
      "utils/**/*",
      "views/**/*",
      "app.js",
      "package.json",
      "yarn.lock"
    ],
    "afterSign": "electron-builder-notarize",
    "mac": {
      "hardenedRuntime": true
    }
  },
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "electron-builder-notarize": "^1.5.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "pug": "^3.0.2",
    "serve-favicon": "^2.5.0",
    "ssh2": "^1.15.0",
    "sshpk": "^1.18.0",
    "update-electron-app": "^3.0.0"
  }
}
